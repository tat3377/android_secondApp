<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.firstapp.MainActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="546dp"
        android:layout_height="177dp"
        android:gravity="top"
        android:orientation="vertical"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/question0"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/btnNo"
            android:layout_width="133.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="1dp"
            android:layout_weight="0"
            android:background="#E91E63"
            android:text="@string/no"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="133.5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="1dp"
            android:layout_weight="0"
            android:background="#B4009688"
            android:text="@string/yes"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/showAnswer"
        android:layout_width="274dp"
        android:layout_height="58dp"
        android:text="Показать ответ"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_answer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Закончить" />
    </LinearLayout>


</LinearLayout>